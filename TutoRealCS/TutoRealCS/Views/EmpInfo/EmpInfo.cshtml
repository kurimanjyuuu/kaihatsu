@* ViewModelを指定する *@
@model EmpInfoViewModel
@{
    ViewData["Title"] = "社員情報";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Book/bookregist.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/Book/bookregist.js"></script>
}

<form id="trForm" class="card startform" asp-controller="EmpInfo" asp-action="Index" method="POST" enctype="multipart/form-data">
    @* 画面全体 *@
    <div class="maincontents-layout">
        <div class="card">
            <label class="lblRegion">登録条件</label><br />
            <div class="divRegion">
                <table class="tableCommon">
                        <tr class="trFixHeight">
                            <td class="tdLabel">社員番号：</td>
                            <td class="tdItem">
                                <input type="text" asp-for="@Model.EmpId" class="textbox w240" maxlength="7" />
                            </td>
                        </tr>
                        <tr class="trFixHeight">
                            <td class="tdLabel">部署コード：</td>
                            <td class="tdItem">
                                <input type="text" asp-for="@Model.DeptCode" class="textbox w240" maxlength="4" />
                            </td>
                        </tr>
                    <tr class="trFixHeight">
                            <td class="tdLabel">姓：</td>
                            <td class="tdItem">
                                <input type="text" asp-for="@Model.Seikanji" class="textbox w240" maxlength="20" />
                            </td>
                        </tr>
                        <tr class="trFixHeight">
                            <td class="tdLabel">名：</td>
                            <td class="tdItem">
                            <input type="text" asp-for="@Model.Meikanji" class="textbox w240" maxlength="20" />
                            </td>
                        </tr>
                        <tr class="trFixHeight">
                            <td class="tdLabel">せい：</td>
                            <td class="tdItem">
                                <input type="text" asp-for="@Model.Seikana" class="textbox w240" maxlength="20" />
                        </tr>
                        <tr class="trFixHeight">
                            <td class="tdLabel">めい：</td>
                            <td class="tdItem">
                                <input type="text" asp-for="@Model.Meikana" class="textbox w240" maxlength="20" />
                            </td>
                        </tr>
                        <tr class="trFixHeight">
                            <td class="tdLabel">メールアドレス：</td>
                            <td class="tdItem">
                                <input type="text" asp-for="@Model.MailAddress" class="textbox w240" maxlength="50" />
                            </td>
                        </tr>
                        <tr class="trFixHeight">
                            <td class="button">
                                <button type="submit" class="btnSearch w120">登録</button>
                                <button class="btnSearch w120">検索</button>        
                                <button type="submit" class="btnSearch w120">削除</button>
                            </td>
                        </tr>
                </table>
            </div>
        </div>
        @* 検索条件 *@
        @* 検索結果 *@
      
    </div>
</form>